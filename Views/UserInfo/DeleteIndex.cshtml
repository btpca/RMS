<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $('#spinner').show();
        var AlertMsg = @Html.Raw(Json.Encode(ViewBag.AlertMsg));
        if (AlertMsg != null) {
            $.notify(AlertMsg, {
                className: 'error',
                clickToHide: true,
                autoHide: false,
                globalPosition: 'right top'
            });
        }
        $('#summary').DataTable({
            dom: 'Blfrtip',
            responsive: true,
            AutoWidth: true,
            select: true,
            searching: true,
            //pageLength: -1,
            paging: true,
            order: [[1, "asc"]],
            lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            buttons: [
                {
                    extend: 'copyHtml5',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                        //columns: [0, 1, 2, 5]
                    }
                },
                {
                    extend: 'print',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'colvis',
                    orientation: 'landscape',
                    collectionLayout: 'fixed three-column'
                },
                {
                    extend: 'colvisGroup',
                    text: 'Show all columns',
                    show: ':hidden'
                },
            ],
        });
        $('#spinner').hide();
    });
</script>
<script type="text/javascript" charset="utf-8">
    function Validator(UserSLNo, UserID) {
        Swal.fire({
            title: "Are you sure to delete the user: " + UserID + "?",
            text: "You won't be able to revert this!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes,&nbsp;Delete User'
        }).then((result) => {
            if (result.value) {
                $('#spinner').show();
                var headers = { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() };
                $.ajax({
                    type: "POST",
                    headers: headers,
                    url: "/UserInfo/Delete",
                    data: { UserSLNo: UserSLNo },
                    success: function (response) {
                        $('#spinner').hide();
                        if (response.CheckStatus == true) {
                            Swal.fire({
                                icon: 'success',
                                title: 'The user: ' + response.UserID + ' has been deleted.',
                                text: 'Redirecting in 3 seconds.',
                                timer: 3000,
                                showConfirmButton: false
                            }).then(function () {
                                window.location.href = "/UserInfo/RedirectUserIndex?ViewID=3";
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'User not deleted, execution not possible!',
                                text: 'Something went wrong!',
                            })
                        }
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            }
        });
    }
</script>