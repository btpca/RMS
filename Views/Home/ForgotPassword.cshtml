@model RMS.Models.ForgotPasswordViewModelDTO
@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>RMS | Forgot Password</title>
    <link href="~/Content/ForgotPasswordStyle.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Reset Password Form Responsive, Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
</head>
<body>
    <div class="elelment" style="padding-top:150px;">
        <div id="spinner" style="display: none; padding-top:150px; padding-bottom:20px; padding-left:800px;">
            <img id="img-spinner" src="@Url.Content("~/Content/Images/spinner.gif")" alt="Loading" />
        </div>
        <div class="element-main">
            <h1>Forgot Password!</h1>
            <p class="required">Forgot your account’s password or having trouble logging into RMS? Enter your email address and we’ll send you a recovery link </p>
            @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.baseUri)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @place_holder = "Your email address", id = "txtEmail" })
                <div style="padding-bottom:30px;"></div>
                <input type="submit" class="btn btn-default" value="Send recovery email" id="btnSubmit" onclick="return Validator();" />
            }
        </div>
    </div>
    <div class="copy-right">
        <p>© 2022 RMS | All rights reserved | <u>@Html.ActionLink("Sign In", "Index", "Home")</u></p>
    </div>
</body>
</html>

