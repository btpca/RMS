@model IEnumerable<RMS.Models.AgreementInfoDTO>
@{
    ViewBag.Title = "List of Agreements";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@Html.AntiForgeryToken()
<section class="content" style="padding-top:15px;">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title fas fa-building">&nbsp;&nbsp;List of Agreements</h3>
                    <div id="spinner" style="display: none;padding-top:50px; padding-bottom:20px; padding-left:100px;">
                        <img id="img-spinner" src="@Url.Content("~/Content/Images/spinner.gif")" alt="Loading" />
                    </div>
                </div>
                <div class="card-body">
                    <table id="summary" class="display compact table table-striped table-bordered mt-2">
                        <thead>
                            <tr>
                                <th class="text-center">Action</th>
                                <th>
                                    @Html.DisplayName("Agreement Code")
                                </th>
                                <th>
                                    @Html.DisplayName("Agreement Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Agreement Status")
                                </th>
                                <th>
                                    @Html.DisplayName("Premise Type")
                                </th>
                                <th>
                                    @Html.DisplayName("Premise Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Premise Address")
                                </th>
                                <th>
                                    @Html.DisplayName("Concern Branch")
                                </th>
                                <th>
                                    @Html.DisplayName("Inspector Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Inspector Contact")
                                </th>
                                <th>
                                    @Html.DisplayName("Cluster Group")
                                </th>
                                <th>
                                    @Html.DisplayName("Start Date")
                                </th>
                                <th>
                                    @Html.DisplayName("End Date")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Schedule No")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Review Period")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Review Increase%")
                                </th>
                                <th>
                                    @Html.DisplayName("Rent Due Day")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Total Area")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("CPU")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Total Rent")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Security Deposit")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Advance")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Adv Adj Period")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Adv Adj Amount")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Tax %")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Tax Amount")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("VAT %")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("VAT Amount")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Net Rent Amount")
                                </th>
                                <th>
                                    @Html.DisplayName("User ID")
                                </th>
                                <th>
                                    @Html.DisplayName("Entry Date")
                                </th>
                                <th>
                                    @Html.DisplayName("Terminated Status")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        @Html.ActionLink(" ", "AgreementDetails", new { AgreementSLNo = item.AgreementSLNo, ClickIndex = 5 }, new { @class = "btn btn-primary nav-icon fas fa-folder-open" })
                                        <a href="#" class="btn btn-danger" onclick="return Validator('@item.AgreementSLNo', '@item.AgreementCode', '@item.AgreementName');">
                                            <i class="nav-icon fas fa-minus-circle"></i>
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementName)
                                    </td>
                                    <td>
                                        @if (item.AgreementStatus == 1)
                                        {
                                            @Html.DisplayName("Created")
                                        }

                                        else if (item.AgreementStatus == 2)
                                        {
                                            @Html.DisplayName("Activate")
                                        }
                                        else if (item.AgreementStatus == 3)
                                        {
                                            @Html.DisplayName("Renewal")
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PremiseType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PremiseName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PremiseAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ConcernBranch)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InspectorName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InspectorContactNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClusterGroup)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementStartDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementEndDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AgreementPeriod)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.ReviewPeriod)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.ReviewIncrease)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.RentDueDay)
                                    </td>
                                    <td class="text-right">
                                        @if (item.UOM == 1)
                                        {
                                            @Html.DisplayFor(modelItem => item.TotalArea)
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.TotalArea)
                                        }
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.CostPerUnit)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TotalRentAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.SecurityDepositAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AdvanceAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AdvanceAdjustmentPeriod)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AdvanceAdjustmentAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TaxPercentage)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TaxAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.VATPercentage)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.VATAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.NetRentAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EntryDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusName)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <span>Click the &nbsp;</span><span style="color:blue;" class="card-title fas fa-folder-open float-lg-none">&nbsp;Details</span><span>&nbsp; button at the left to open the agreement details and </span><span>Click the &nbsp;</span><span style="color:red;" class="card-title float-lg-none"><i class="fas fa-minus-circle"></i>&nbsp;Block</span><span>&nbsp; button to block the agreement.</span>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
