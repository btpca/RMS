@model IEnumerable<RMS.Models.CostCenterScheduleDTO>
@{
    ViewBag.Title = "Cost Center Wise Rent Forecast";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@Html.AntiForgeryToken()
<section class="content" style="padding-top:15px;">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card card-blue">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-sitemap"></i><span>&nbsp;&nbsp;Cost Center Wise Rent Forecast - Date Range&nbsp;&nbsp;@ViewBag.DateRange</span></h3>
                    <div id="spinner" style="display: none;padding-top:50px; padding-bottom:20px; padding-left:100px;">
                        <img id="img-spinner" src="@Url.Content("~/Content/Images/spinner.gif")" alt="Loading" />
                    </div>
                </div>
                <div class="card-body">
                    <table id="summary" class="display compact table table-striped table-bordered mt-2">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Agr Code")
                                </th>
                                <th>
                                    @Html.DisplayName("Terminated Status")
                                </th>
                                <th>
                                    @Html.DisplayName("Terminated Date")
                                </th>
                                <th>
                                    @Html.DisplayName("Agr Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Premise Type")
                                </th>
                                <th>
                                    @Html.DisplayName("Premise Name")
                                </th>
                                <th>
                                    @Html.DisplayName("CC Code")
                                </th>
                                <th>
                                    @Html.DisplayName("CC Name")
                                </th>
                                <th>
                                    @Html.DisplayName("SOL Code")
                                </th>
                                <th>
                                    @Html.DisplayName("SOL Name")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Share %")
                                </th>
                                <th>
                                    @Html.DisplayName("Start Date")
                                </th>
                                <th>
                                    @Html.DisplayName("End Date")
                                </th>
                                <th>
                                    @Html.DisplayName("Schedule No")
                                </th>
                                <th>
                                    @Html.DisplayName("Month No")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Year)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Month)
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Enhancement No")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Total Area")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("CPU")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Rent Amount")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Agr Advance")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("CC Adv Adjustment")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Agr Tax%")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Agr Tax")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("CC Tax")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Agr VAT%")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Agr VAT")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("CC VAT")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Total Rent")
                                </th>
                                <th class="text-right">
                                    @Html.DisplayName("Net Rent")
                                </th>
                                <th>
                                    @Html.DisplayName("AP")
                                </th>
                                <th>
                                    @Html.DisplayName("Payment")
                                </th>
                                <th>
                                    @Html.DisplayName("Tax Type")
                                </th>
                                <th>
                                    @Html.DisplayName("VAT Type")
                                </th>
                                <th>
                                    @Html.DisplayName("Agr Special")
                                </th>
                                <th>
                                    @Html.DisplayName("Calculation Method")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EntryDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AliasCode)
                                    </td>
                                    <td>
                                        @if (item.BlockText == "Open")
                                        {
                                            @Html.DisplayFor(modelItem => item.BlockText)
                                        }
                                        else
                                        {
                                            <span style="color:red; font-weight:bold;">@Html.DisplayFor(modelItem => item.BlockText)</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.BlockDate == null)
                                        {

                                        }
                                        else
                                        {
                                            @Convert.ToDateTime(item.BlockDate).ToString("dd/MM/yyyy")
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PremiseType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PremiseName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CCCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CCName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOLCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOLName)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.CCSharePercentage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementStartDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementEndDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementPeriod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MonthNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Year)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Month)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.ReviewNo)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TotalArea)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.CostPerUnit)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.RentAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AdvanceAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AdvanceAdjustmentAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AiTaxPercentage)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AiTaxAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TaxAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AiVATPercentage)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AiVATAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.VATAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TotalRentAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.NetRentAmount)
                                    </td>
                                    <td>
                                        @if (item.PostText == "Unposted")
                                        {
                                            @Html.DisplayFor(modelItem => item.PostText)
                                        }
                                        else
                                        {
                                            <span style="color:blueviolet; font-weight:bold;">@Html.DisplayFor(modelItem => item.PostText)</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.PJPostText == "Unposted")
                                        {
                                            @Html.DisplayFor(modelItem => item.PJPostText)
                                        }
                                        else
                                        {
                                            <span style="color:blueviolet; font-weight:bold;">@Html.DisplayFor(modelItem => item.PJPostText)</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.TaxType == 1)
                                        {
                                            <span>Inclusive</span>
                                        }
                                        else if (item.TaxType == 2)
                                        {
                                            <span>Exclusive</span>
                                        }
                                        else if (item.TaxType == 3)
                                        {
                                            <span>Exempted</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.VatType == 1)
                                        {
                                            <span>Inclusive</span>
                                        }
                                        else if (item.VatType == 2)
                                        {
                                            <span>Exclusive</span>
                                        }
                                        else if (item.VatType == 3)
                                        {
                                            <span>Exempted</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Special == true)
                                        {
                                            <span>Yes</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CalculationMethod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.EntryDate, "{0:dd/MM/yyyy}")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <span>Click the &nbsp;</span><span style="color:darkblue;" class="card-title fas fa-check-circle float-lg-none">&nbsp;Copy-Excel-PDF-Print-Column-Visibility</span><span>&nbsp; button at the top left to export the report.</span>
                    <button type="button" class="btn btn-warning" style="float: right;"
                            id="btnFormBack" onclick="return BackValidator();">
                        <i class="fas fa-reply"></i>
                        <span>&nbsp;Back</span>
                    </button>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
