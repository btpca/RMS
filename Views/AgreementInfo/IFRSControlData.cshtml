@model RMS.Models.IFRSControlDataInfo
@{
    ViewBag.Title = "IFRS Control Data";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@using (Html.BeginForm("BorrowingRate", "AgreementInfo", FormMethod.Post, new { id = "frmSubmit", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <section class="content" style="padding-top:15px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-bolt"></i><span>&nbsp;&nbsp;IFRS Control Data</span></h3>
                        </div>
                        <div class="card-body">
                            <div class="row" style="padding-top:10px; padding-bottom:0px;">
                                <div class="required col-xs-12 col-sm-4 col-md-3">
                                    @Html.LabelFor(model => model.RightofUseAssetsGLCode, new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.RightofUseAssetsGLCode, new { @placeholder = "GL Code", @style = "text-align: left;", @type = "number", @min = "0", @step = "0.01", @class = "form-control input-sm", id = "txtRightofUseAssetsGLCode" })
                                </div>
                                <div class="required col-xs-12 col-sm-4 col-md-3" style="padding-left:40px">
                                    @Html.LabelFor(model => model.LeaseLiabilityGLCode, new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.LeaseLiabilityGLCode, new { @placeholder = "GL Code", @style = "text-align: left;", @type = "number", @min = "0", @step = "0.01", @class = "form-control input-sm", id = "txtLeaseLiabilityGLCode" })
                                </div>
                            </div>
                            <div class="row" style="padding-top:10px; padding-bottom:0px;">
                                <div class="required col-xs-12 col-sm-4 col-md-3">
                                    @Html.LabelFor(model => model.AdvanceOfficeRentGLCode, new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.AdvanceOfficeRentGLCode, new { @placeholder = "GL Code", @style = "text-align: left;", @type = "number", @min = "0", @step = "0.01", @class = "form-control input-sm", id = "txtAdvanceOfficeRentGLCode" })
                                </div>
                                <div class="required col-xs-12 col-sm-4 col-md-3" style="padding-left:40px">
                                    @Html.LabelFor(model => model.DepreciationExpenseGLCode, new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.DepreciationExpenseGLCode, new { @placeholder = "GL Code", @style = "text-align: left;", @type = "number", @min = "0", @step = "0.01", @class = "form-control input-sm", id = "txtDepreciationExpenseGLCode" })
                                </div>
                            </div>
                            <div class="row" style="padding-top:10px; padding-bottom:0px;">
                                <div class="required col-xs-12 col-sm-4 col-md-3">
                                    @Html.LabelFor(model => model.InterestExpenseGLCode, new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.InterestExpenseGLCode, new { @placeholder = "GL Code", @style = "text-align: left;", @type = "number", @min = "0", @step = "0.01", @class = "form-control input-sm", id = "txtInterestExpenseGLCode" })
                                </div>
                                <div class="required col-xs-12 col-sm-4 col-md-3" style="padding-left:40px">
                                    @Html.LabelFor(model => model.OfficeRentExpenseGLCode, new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.OfficeRentExpenseGLCode, new { @placeholder = "GL Code", @style = "text-align: left;", @type = "number", @min = "0", @step = "0.01", @class = "form-control input-sm", id = "txtOfficeRentExpenseGLCode" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <span>Fields marked with an asterisk &nbsp;</span><span style="color:red;"><b>*</b></span><span>&nbsp; are mandatory.</span>
                            <button type="button" class="btn btn-success" style="float: right;"
                                    id="btnFormSave" onclick="return SaveValidator();">
                                <i class="fas fa-save"></i>
                                <span>&nbsp;Save</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<style type="text/css">
    .form-control {
        width: auto;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>
<style type="text/css" media="screen">
    #spinner {
        position: fixed;
        top: -18%;
        left: 30%;
    }
</style>

