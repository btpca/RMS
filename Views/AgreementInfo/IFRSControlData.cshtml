<script type="text/javascript">
    $(document).ready(function () {
        $('#spinner').show();
        var BorrowingRate = parseFloat($("#txtBorrowingRate").val().replace(/[^0-9\.]+/g, ""));
        $("#txtBorrowingRate").val(BorrowingRate.toFixed(2));
        $("#txtBorrowingRate").focus();
        $("#txtBorrowingRate").blur(function () {
            if ($(this).val() == '') { $("#txtBorrowingRate").val(0); }
            var BorrowingRate = parseFloat($("#txtBorrowingRate").val().replace(/[^0-9\.]+/g, ""));
            $("#txtBorrowingRate").val(BorrowingRate.toFixed(2));
        })
    });
</script>
<script type="text/javascript">
    function SaveValidator() {
        //==Control Data
        if ($("#txtRightofUseAssetsGLCode").val() == "" || $("#txtRightofUseAssetsGLCode").val() == null) {
            $("#txtRightofUseAssetsGLCode").focus();
            Swal.fire({
                icon: 'warning',
                title: 'Enter The Right of Use Assets GL Code!',
                text: 'Validation Message!',
            })
            return false;
        }
        if ($("#txtLeaseLiabilityGLCode").val() == "" || $("#txtLeaseLiabilityGLCode").val() == null) {
            $("#txtLeaseLiabilityGLCode").focus();
            Swal.fire({
                icon: 'warning',
                title: 'Enter The Lease Liability GL Code!',
                text: 'Validation Message!',
            })
            return false;
        }
        if ($("#txtAdvanceOfficeRentGLCode").val() == "" || $("#txtAdvanceOfficeRentGLCode").val() == null) {
            $("#txtAdvanceOfficeRentGLCode").focus();
            Swal.fire({
                icon: 'warning',
                title: 'Enter The Advance Office Rent GL Code!',
                text: 'Validation Message!',
            })
            return false;
        }
        if ($("#txtDepreciationExpenseGLCode").val() == "" || $("#txtDepreciationExpenseGLCode").val() == null) {
            $("#txtDepreciationExpenseGLCode").focus();
            Swal.fire({
                icon: 'warning',
                title: 'Enter The Depreciation Expense GL Code!',
                text: 'Validation Message!',
            })
            return false;
        }
        if ($("#txtInterestExpenseGLCode").val() == "" || $("#txtInterestExpenseGLCode").val() == null) {
            $("#txtInterestExpenseGLCode").focus();
            Swal.fire({
                icon: 'warning',
                title: 'Enter The Interest Expense GL Code!',
                text: 'Validation Message!',
            })
            return false;
        }
        if ($("#txtOfficeRentExpenseGLCode").val() == "" || $("#txtOfficeRentExpenseGLCode").val() == null) {
            $("#txtOfficeRentExpenseGLCode").focus();
            Swal.fire({
                icon: 'warning',
                title: 'Enter The Office Rent Expense GL Code!',
                text: 'Validation Message!',
            })
            return false;
        }
        //==Save to Submit Form
        Swal.fire({
            title: "Are you sure to save the IFRS Control Data?",
            text: "Please review all required information entered!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes,&nbsp;Save'
        }).then((result) => {
            if (result.value) {
                $('#spinner').show();
                //Ajax Post Call
                $.ajax({
                    type: "POST",
                    url: "/AgreementInfo/IFRSControlData",
                    data: $('#frmSubmit').serialize(),
                    success: function (response) {
                        $('#spinner').hide();
                        if (response.CheckStatus == true) {
                            Swal.fire({
                                icon: 'success',
                                title: 'The IFRS Control Data has been saved.',
                                text: 'Data has been saved.',
                            })
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Data not saved, execution not possible!',
                                text: 'Something went wrong!',
                            })
                        }
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
                //==
            }
        });
    }
</script>