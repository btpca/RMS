@model RMS.Models.LookupDTO
@{
    ViewBag.Title = "Lookup";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@using (Html.BeginForm("LookupCreate", "AgreementInfo", FormMethod.Post, new { id = "frmSubmit", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <section class="content" style="padding-top:15px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-bolt"></i><span>&nbsp;&nbsp;Lookup</span></h3>
                        </div>
                        <div class="card-body">
                            <div class="row" style="padding-top:10px; padding-bottom:0px;">
                                <div class="required col-xs-12 col-sm-4 col-md-3">
                                    @Html.Label("Group Name", new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.DropDownListFor(model => model.GroupName, new SelectList(ViewBag.LookupList, "Text", "Text"), "Select Group Name", new { style = "width: 350px;", @class = "chosen form-control input-sm", id = "ddlGroupName" })
                                </div>
                            </div>
                            <div class="row" style="padding-top:10px; padding-bottom:0px;">
                                <div class="required col-xs-12 col-sm-4 col-md-3">
                                    @Html.Label("Code", new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.Code, new { style = "width: 350px;", autocomplete = "off", @class = "form-control input-sm", id = "txtCode" })
                                </div>
                            </div>
                            <div class="row" style="padding-top:10px; padding-bottom:0px;">
                                <div class="required col-xs-12 col-sm-4 col-md-3">
                                    @Html.Label("Description", new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.Description, new { style = "width: 350px;", autocomplete = "off", @class = "form-control input-sm", id = "txtDescription" })
                                </div>
                            </div>
                            <div class="row" style="padding-top:10px; padding-bottom:0px;">
                                <div class="col-xs-12 col-sm-4 col-md-3">
                                    @Html.Label("Parent Code", new { @class = "control-label" })
                                </div>
                                <div class="col-xs-12 col-sm-8 col-md-3">
                                    @Html.TextBoxFor(model => model.ParentCode, new { style = "width: 350px;", autocomplete = "off", @class = "form-control input-sm", id = "txtParentCode" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <span>Fields marked with an asterisk &nbsp;</span><span style="color:red;"><b>*</b></span><span>&nbsp; are mandatory.</span>
                            <button type="button" class="btn btn-success" style="float: right;"
                                    id="btnSave">
                                <i class="fas fa-save"></i>
                                <span>&nbsp;Save</span>
                            </button>
                            <button type="button" class="btn btn-warning" style="float: right; margin-right:15px;"
                                    id="btnFormBack" onclick="return BackValidator();">
                                <i class="fas fa-reply"></i>
                                <span>&nbsp;Back to List</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<style type="text/css">
