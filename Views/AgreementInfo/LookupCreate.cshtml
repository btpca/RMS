<script type="text/javascript">

    function BackValidator() {
        window.location.href = "/AgreementInfo/LookupIndex";
    }

    $('#btnSave').on('click', function () {
        //==Validation
        if ($("#ddlGroupName").val() == 0 || $("#ddlGroupName").val() == "") {
            Swal.fire({
                icon: 'warning',
                title: 'Please select the Group Name!',
                text: 'Validation Message!',
            })
            return false;
        }
        if ($("#txtCode").val() == "" || $("#txtCode").val() == null) {
            Swal.fire({
                icon: 'warning',
                title: 'Enter the code!',
                text: 'Validation Message!',
            })
            return false;
        }
        if ($("#txtDescription").val() == "" || $("#txtDescription").val() == null) {
            Swal.fire({
                icon: 'warning',
                title: 'Enter the description!',
                text: 'Validation Message!',
            })
            return false;
        }
        //==Save to Submit Form
        Swal.fire({
            title: "Are you sure to save the lookup?",
            text: "Please review all required information entered!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes,&nbsp;Save'
        }).then((result) => {
            if (result.value) {
                //==Check Premise Code and Type Exist
                $('#spinner').show();
                //==Submit Post
                var headers = { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() };
                $.ajax({
                    type: "POST",
                    headers: headers,
                    url: "/AgreementInfo/LookupCreate",
                    data: $('#frmSubmit').serialize(),
                    success: function (response) {
                        $('#spinner').hide();
                        if (response.CheckStatus == true) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Lookup has been created.',
                                text: 'Redirecting in 3 seconds.',
                                timer: 3000,
                                showConfirmButton: false
                            }).then(function () {
                                window.location.href = "/AgreementInfo/LookupIndex";
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Lookup not created, execution not possible!',
                                text: 'Something went wrong!',
                            })
                        }
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
                //==
            }
        });
    });
</script>