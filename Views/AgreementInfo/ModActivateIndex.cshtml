<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $('#spinner').show();
        var AlertMsg = @Html.Raw(Json.Encode(ViewBag.AlertMsg));
        if (AlertMsg != null) {
            $.notify(AlertMsg, {
                className: 'warning',
                clickToHide: true,
                autoHide: false,
                globalPosition: 'right top'
            });
        }
        $('#summary').DataTable({
            dom: 'Blfrtip',
            colReorder: true,
            responsive: true,
            AutoWidth: true,
            select: true,
            searching: true,
            //pageLength: -1,
            paging: true,
            order: [[1, "desc"]],
            lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            columnDefs: [
                //{ className: "dt-center", targets: [0, 1, 2, 3, 4] },
                { "visible": false, "targets": 3 },
                { "visible": false, "targets": 6 },
                { "visible": false, "targets": 7 },
                { "visible": false, "targets": 10 },
                { "visible": false, "targets": 11 },
                { "visible": false, "targets": 14 },
                { "visible": false, "targets": 15 },
                { "visible": false, "targets": 17 },
                { "visible": false, "targets": 19 },
                { "visible": false, "targets": 24 },
                { "visible": false, "targets": 25 },
                { "visible": false, "targets": 26 },
                { "visible": false, "targets": 27 },
                { "visible": false, "targets": 28 },
                { "visible": false, "targets": 29 },
                { "visible": false, "targets": 30 },
                { "visible": false, "targets": 32 },
                { "visible": false, "targets": 33 },
            ],
            initComplete: function () {
                this.api().columns().every(function (i) {
                    var column = this;
                    if (i == 4 || i == 22) {
                        var select = $('<select><option value="..."></option></select>')
                            .appendTo($(column.footer()).empty())
                            .on('change', function () {
                                var val = $(this).val();

                                column.search(val, true, false)
                                    .draw(true);
                            });
                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    }

                });
            },
            buttons: [
                {
                    extend: 'copyHtml5',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                        //columns: [0, 1, 2, 5]
                    }
                },
                {
                    extend: 'print',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'colvis',
                    orientation: 'landscape',
                    collectionLayout: 'fixed three-column'
                },
                {
                    extend: 'colvisGroup',
                    text: 'Show all columns',
                    show: ':hidden'
                },
            ],
        });
        $('#spinner').hide();
    });
</script>
<script type="text/javascript" charset="utf-8">
    function Validator(AgreementSLNo, AliasCode, AgreementName) {
        Swal.fire({
            title: "Are you sure to activate the modified agreement: " + AliasCode + " " + AgreementName + "?",
            text: "Generate the agreement schedule!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes,&nbsp;Activate Agreement'
        }).then((result) => {
            if (result.value) {
                $('#spinner').show();
                var headers = { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() };
                $.ajax({
                    type: "POST",
                    headers: headers,
                    url: "/AgreementInfo/ModActivate",
                    data: { AgreementSLNo: AgreementSLNo },
                    success: function (response) {
                        $('#spinner').hide();
                        if (response.CheckStatus == true) {
                            Swal.fire({
                                icon: 'success',
                                title: 'The modified agreement: ' + response.AliasCode + ' ' + response.AgreementName + ' has been activated.',
                                text: 'Redirecting in 3 seconds.',
                                timer: 3000,
                                showConfirmButton: false
                            }).then(function () {
                                window.location.href = "/AgreementInfo/RedirectModAgreementIndex?ViewID=4";
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'The modified agreement not activate, execution not possible!',
                                text: 'Something went wrong!',
                            })
                        }
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            }
        });
    }
</script>