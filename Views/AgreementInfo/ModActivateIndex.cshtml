                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementStartDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementEndDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementPeriod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RentDueDay)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TotalArea)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.CostPerUnit)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.RentAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.SecurityDepositAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.AdvanceAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TaxPercentage)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TaxAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.VATPercentage)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.VATAmount)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TotalRentAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EntryDate, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @if (item.TaxType == 1)
                                        {
                                            <span>Inclusive</span>
                                        }
                                        else if (item.TaxType == 2)
                                        {
                                            <span>Exclusive</span>
                                        }
                                        else if (item.TaxType == 3)
                                        {
                                            <span>Exempted</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.VatType == 1)
                                        {
                                            <span>Inclusive</span>
                                        }
                                        else if (item.VatType == 2)
                                        {
                                            <span>Exclusive</span>
                                        }
                                        else if (item.VatType == 3)
                                        {
                                            <span>Exempted</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgreementText)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EditBy)
                                    </td>
                                    <td>
                                        @if (item.EditDate != null)
                                        {
                                            @Convert.ToDateTime(item.EditDate).ToString("dd/MM/yyyy")
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ActivateBy)
                                    </td>
                                    <td>
                                        @if (item.ActivateDate != null)
                                        {
                                            @Convert.ToDateTime(item.ActivateDate).ToString("dd/MM/yyyy")
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsIFRSEnable == true)
                                        {
                                            <span>Yes</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IFRSEffectiveDate != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.IFRSEffectiveDate, "{0:dd/MM/yyyy}")
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CalculationMethod)
                                    </td>
                                </tr>
                            }
